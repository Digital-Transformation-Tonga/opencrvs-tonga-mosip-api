{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "fhir",
      "node"
    ],
    "paths": {
      "@opencrvs/java-mediator-interop": [
        "./src/java-mediator-interop"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}